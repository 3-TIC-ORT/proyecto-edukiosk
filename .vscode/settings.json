{
    // General VS Code watcher exclusion (Good practice)
    "files.watcherExclude": {
        "**/Backend/**": true,
        "**/node_modules/**": true 
    },

    // ðŸŽ¯ Final Fix: Ignore all JSON files, EXCEPT package.json
    // This is the most reliable way to stop the refresh caused by file writing.
    "liveServer.settings.ignoreFiles": [
        "**/*.json",         // Ignore all files ending in .json
        "!**/package.json",  // EXCEPTION: DO NOT ignore package.json
        "**/*.scss", 
        "**/*.sass"
    ]
}